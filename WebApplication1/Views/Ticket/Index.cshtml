@model IList<WebApplication1.Models.Ticket>

<table>
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Date
            </th>
            <th>
                Cost
            </th>
            <th>
                Description
            </th>
            <th>
                Operations
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Name</td>
        <td>@item.Date</td>
        <td>@item.Cost</td>
        <td>@item.Description</td>
        <td>@Html.ActionLink("Buy","BuyTicket","Ticket", new { id = item.Id})</td>
    </tr>
    }
</table>
